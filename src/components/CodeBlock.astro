---
/**
 * CodeBlock Component
 *
 * Enhanced code block with Supabase-quality features:
 * - Copy button (top-right)
 * - File name header
 * - Line numbers
 * - Syntax highlighting via Expressive Code
 *
 * Usage:
 * <CodeBlock lang="typescript" filename="lib/varity.ts">
 *   import { createClient } from '@varity/sdk'
 * </CodeBlock>
 */

interface Props {
  lang: string
  filename?: string
  showLineNumbers?: boolean
  highlightLines?: number[]
  code: string
}

const { lang, filename, showLineNumbers = true, highlightLines = [], code } = Astro.props
const id = `code-${Math.random().toString(36).slice(2, 11)}`
---

<div class="varity-code-block">
  {filename && (
    <div class="code-header">
      <span class="filename">{filename}</span>
      <button
        class="copy-button"
        data-code-id={id}
        aria-label="Copy code to clipboard"
      >
        <svg class="icon-copy" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <svg class="icon-check" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span class="copy-text">Copy</span>
      </button>
    </div>
  )}

  <div class="code-content">
    <pre id={id} class:list={["language-" + lang]}><code>{code}</code></pre>
  </div>
</div>

<script>
  // Copy button functionality
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.copy-button').forEach(button => {
      button.addEventListener('click', async () => {
        const codeId = button.getAttribute('data-code-id')
        const codeBlock = document.getElementById(codeId)
        if (!codeBlock) return

        const code = codeBlock.textContent || ''

        try {
          await navigator.clipboard.writeText(code)

          // Visual feedback
          button.classList.add('copied')
          button.querySelector('.copy-text').textContent = 'Copied!'

          setTimeout(() => {
            button.classList.remove('copied')
            button.querySelector('.copy-text').textContent = 'Copy'
          }, 2000)
        } catch (err) {
          console.error('Failed to copy:', err)
        }
      })
    })
  })
</script>

<style>
  .varity-code-block {
    margin: var(--space-6) 0;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: linear-gradient(180deg, #0f0f12 0%, #0d0d0f 100%);
    border: 1px solid var(--border-primary);
    box-shadow: var(--shadow-md);
  }

  .code-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-3) var(--space-4);
    background: rgba(255, 255, 255, 0.02);
    border-bottom: 1px solid var(--border-secondary);
  }

  .filename {
    font-family: var(--sl-font-mono);
    font-size: var(--text-sm);
    color: var(--text-tertiary);
    font-weight: var(--font-medium);
  }

  .copy-button {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-md);
    padding: var(--space-2) var(--space-3);
    color: var(--text-tertiary);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
    font-family: var(--sl-font);
  }

  .copy-button:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    border-color: var(--border-primary);
  }

  .copy-button.copied {
    background: var(--color-success-subtle);
    border-color: var(--color-success);
    color: var(--color-success);
  }

  .copy-button .icon-check {
    display: none;
  }

  .copy-button.copied .icon-copy {
    display: none;
  }

  .copy-button.copied .icon-check {
    display: block;
  }

  .code-content pre {
    margin: 0;
    padding: var(--space-4);
    overflow-x: auto;
    font-family: var(--sl-font-mono);
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--gray-200);
  }

  .code-content code {
    font-family: inherit;
    font-size: inherit;
    background: transparent;
    padding: 0;
    border: none;
  }
</style>
