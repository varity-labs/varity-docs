---
/**
 * ProductTile Component
 *
 * Product tile for homepage grid.
 * SVG icon, left accent border, entire tile clickable.
 */

interface Props {
  icon: string
  title: string
  description: string
  href: string
}

const { icon, title, description, href } = Astro.props

const icons: Record<string, string> = {
  auth: '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>',
  database: '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/></svg>',
  storage: '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/></svg>',
  payments: '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"/><line x1="1" y1="10" x2="23" y2="10"/></svg>',
  deploy: '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 16 12 12 8 16"/><line x1="12" y1="12" x2="12" y2="21"/><path d="M20.39 18.39A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.3"/></svg>',
  cli: '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="4 17 10 11 4 5"/><line x1="12" y1="19" x2="20" y2="19"/></svg>',
}

const svgIcon = icons[icon] || ''
---

<a class="product-tile" href={href}>
  <div class="tile-icon" set:html={svgIcon} />
  <div class="tile-content">
    <h3 class="tile-title">{title}</h3>
    <p class="tile-description">{description}</p>
  </div>
  <svg class="tile-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M5 12h14M12 5l7 7-7 7"/>
  </svg>
</a>

<style>
  .product-tile {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-4);
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.04) 0%, rgba(255, 255, 255, 0.02) 100%);
    border: 1px solid var(--border-primary);
    border-left: 3px solid rgba(20, 184, 166, 0.5);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .product-tile:hover {
    border-left-color: #14b8a6;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), 0 0 20px rgba(20, 184, 166, 0.08);
  }

  .tile-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: var(--color-brand-subtle);
    border: 1px solid var(--color-brand);
    border-radius: var(--radius-md);
    flex-shrink: 0;
    color: var(--color-brand);
  }

  .tile-content {
    flex: 1;
    min-width: 0;
  }

  .tile-title {
    font-size: 1rem;
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin: 0 0 2px 0;
    line-height: var(--leading-tight);
  }

  .tile-description {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  .tile-arrow {
    flex-shrink: 0;
    color: var(--text-muted);
    margin-top: 2px;
    transition: all var(--transition-fast);
  }

  .product-tile:hover .tile-arrow {
    color: var(--color-brand);
    transform: translateX(3px);
  }

  @media (max-width: 48rem) {
    .product-tile {
      padding: var(--space-3);
      gap: var(--space-3);
    }

    .tile-icon {
      width: 2.25rem;
      height: 2.25rem;
    }

    .tile-description {
      font-size: 0.8125rem;
    }
  }
</style>
