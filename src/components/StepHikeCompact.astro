---
/**
 * StepHikeCompact Component
 *
 * Supabase-style numbered step guide for quickstart pages.
 * Progressive disclosure with Details + Code sections.
 *
 * Usage:
 * <StepHikeCompact>
 *   <StepHikeCompact.Step step={1}>
 *     <StepHikeCompact.Details title="Create project">
 *       Your explanation here...
 *     </StepHikeCompact.Details>
 *     <StepHikeCompact.Code>
 *       ```bash
 *       npm install @varity/sdk
 *       ```
 *     </StepHikeCompact.Code>
 *   </StepHikeCompact.Step>
 * </StepHikeCompact>
 */

interface Props {
  numbered?: boolean
}

const { numbered = true } = Astro.props
---

<div class:list={["step-hike-compact", numbered && "numbered"]}>
  <slot />
</div>

<style>
  .step-hike-compact {
    margin: var(--space-8) 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .step-hike-compact.numbered {
    counter-reset: step-counter;
  }
</style>
